  "scripts": {
    "build": "nest build",
    "format": "biome format --write",
    "start": "cross-env NODE_ENV=local nest start --watch",
    "start:debug": "cross-env NODE_ENV=local nest start --debug --watch",
    "lint": "biome check --write",
    "============================ Test ============================": "",
    "test": "npx dotenv -e .env.test -- bash test/scripts/setup-test.sh && jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "============================ Environment ============================": "",
    "setup:local": "docker compose -f docker-compose.local.yml -p imkdw-dev-server-local up -d",
    "setup:test": "docker compose -f docker-compose.test.yml -p imkdw-dev-server-test up -d",
    "============================ Prisma ============================": "",
    "prisma:generate": "npx dotenv -e .env -- prisma generate",
    "prisma:push": "npx dotenv -e .env -- prisma db push",
    "prisma:studio": "npx dotenv -e .env -- prisma studio"
  },
  "dependencies": {
    "@nestjs-cls/transactional": "^2.6.1",
